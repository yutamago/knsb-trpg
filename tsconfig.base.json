{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@konosuba-trpg/data-access": ["libs/shared/data-access/src/index.ts"],
      "@konosuba-trpg/game-util": ["libs/shared/game-util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
