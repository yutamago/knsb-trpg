# Run the container with `docker run -p 3000:3000 -t knsb-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system knsb-server && \
          adduser --system -G knsb-server knsb-server

COPY dist/apps/knsb-server knsb-server/
RUN chown -R knsb-server:knsb-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix knsb-server --omit=dev -f install

CMD [ "node", "knsb-server" ]
